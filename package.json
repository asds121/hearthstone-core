{
  "name": "hearthstone-core",
  "version": "0.0.1",
  "description": "A comprehensive Hearthstone game engine implementation in TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest --config jest.final.config.js",
    "test:ci": "jest --config jest.ci.config.js --ci --verbose --passWithNoTests=false",
    "test:release": "jest --config jest.release.config.js --ci --verbose --passWithNoTests=false",
    "test:diagnose": "node scripts/diagnose-tests.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "docs": "typedoc --out docs src",
    "clean": "rimraf dist docs"
  },
  "keywords": [
    "hearthstone",
    "game-engine",
    "typescript",
    "card-game",
    "event-driven"
  ],
  "author": "AI Assistant",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.8.10",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.3",
    "typescript": "^5.2.2"
  },
  "directories": {
    "doc": "docs",
    "example": "examples"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asds121/hearthstone-core.git"
  },
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/asds121/hearthstone-core/issues"
  },
  "homepage": "https://github.com/asds121/hearthstone-core#readme"
}
